{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "@ckapp/rxjs-node-fs": ["../fs/src"],
      "@ckapp/rxjs-node-fs/*": ["../fs/src/*"],
      "@ckapp/rxjs-node-process": ["../process/src"],
      "@ckapp/rxjs-node-process/*": ["../process/src/*"]
    },
    "types": ["jest", "node"]
  }
}
