{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "@ckapps/rxjs-node-fs": ["../fs/src"],
      "@ckapps/rxjs-node-fs/*": ["../fs/src/*"]
    },
    "types": ["jest", "node"]
  }
}
