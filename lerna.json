{
  "version": "0.5.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "run": {
      "stream": true
    },
    "version": {
      "allowBranch": [
        "master",
        "release/*"
      ]
    }
  }
}
