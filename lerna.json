{
  "version": "0.5.2",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "build: publish %s"
    },
    "run": {
      "stream": true
    },
    "version": {
      "allowBranch": [
        "main",
        "next"
      ]
    }
  }
}
