{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "lerna run build --parallel",
    "ci:release": "yarn release --yes",
    "ci:release:pre": "yarn release:pre --yes",
    "lint": "eslint .",
    "release": "lerna publish --conventional-graduate",
    "release:pre": "lerna publish --conventional-prerelease --preid next --pre-dist-tag next",
    "test": "lerna run test --parallel",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/config-lerna-scopes": "^17.0.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lerna": "^5.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "rxjs": "~7.5.0",
    "ts-jest": "^28.0.3",
    "typescript": "~4.7.2"
  }
}
